<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding= "5dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Sharath Kumar"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
             />

        <TextView
            android:id="@+id/text_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:paddingLeft="10dp"
            android:text="Android Developer"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/text_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_designation"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/ic_location_on_black_24dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="India"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_graph"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_designation"
            android:paddingLeft="10dp"
            android:src="@drawable/img_bar_chartpng"
            android:visibility="gone"
             />



    </RelativeLayout>



</android.support.v7.widget.CardView>
